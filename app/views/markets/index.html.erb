<div class="container">
    <div class="row">
      <div class="col-md-6 col-sm-12">
        <h1>All supermarkets</h1>
        <ul>
          <% @markets.each do |market| %>
            <li><%= market.name %></li>
          <% end %>
        </ul>

      </div>
      <div class="col-md-6 col-sm-12">
        <div id="map"
            style="width: 100%; height: 600px;"
            data-markers="<%= @markers.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
        ></div>
      </div>     
    </div>   
</div>    







